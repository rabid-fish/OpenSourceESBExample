<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:cxf="http://camel.apache.org/schema/cxf"
	xmlns:camel="http://camel.apache.org/schema/spring"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
">

	<context:component-scan base-package="com.github.rabid_fish.subscriber" />

	<camelContext xmlns="http://camel.apache.org/schema/spring" id="mathOperationSubscriberCamelContext">

		<camel:endpoint id="mathOperationOutputTopicEndpoint" uri="${mathOperationOutputTopicEndpoint}" />
		<camel:endpoint id="mathOperationOutputLogEndpoint" uri="${mathOperationOutputLogEndpoint}" />

		<route id="mathOperationSubscriberRoute">
			<camel:from ref="mathOperationOutputTopicEndpoint" />
			<camel:to ref="mathOperationOutputLogEndpoint" />
		</route>

	</camelContext>

</beans>
